<idea-plugin>
    <id>com.your.ltc.flatocean.id</id>
    <name>FlatOcean</name>
    <version>2.9.4</version>
    <vendor email="lucas.tempass@hotmail.com">Lucas T. Cerveira</vendor>

    <description> <![CDATA[
        <br>
        <h1> A flat theme for JetBrains IDEs for those who can't stand being away from the ocean.</h1>
        <br>
        <h2> &gt; Samples:</h2>
        <img width="50%" alt="JAVA" src="https://raw.githubusercontent.com/LucasTempass/FlatOcean/master/MISC/JAVA.png">

        <img alt="JS" width="50%" height="auto" src="https://raw.githubusercontent.com/LucasTempass/FlatOcean/master/MISC/JS.png">

        <img alt="JSON" width="50%"  src="https://raw.githubusercontent.com/LucasTempass/FlatOcean/master/MISC/JSON.png">

        <h2> &gt; Usage</h2>
        <br>
        <h3>First install the theme via <b>Settings | Plugins</b>, then go to <b>Settings | Appearance &amp; Behavior |
            Appearance</b> and select <b>FlatOcean</b>. Enjoy.</h3>

        <img alt="SETUP" src="https://raw.githubusercontent.com/LucasTempass/FlatOcean/master/MISC/SETUP.png">
        ]]></description>

    <idea-version since-build="191.0"/>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <themeProvider id="2c90a61b-91ab-4cb6-80ce-fe291b56ac22" path="/FlatOcean.theme.json"/>
        <bundledColorScheme id="8ec390b9-2eb6-4010-8072-a4e5f04fe0df" path="/FlatOcean.xml"/>
    </extensions>

    <actions>
    </actions>

</idea-plugin>